      content="Món ăn sáng ngon gồm trứng gà, trứng vịt lộn, bắp ngô và khoai lang" />
    <meta name="author" content="Chegi BreakFast" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap"
      rel="stylesheet">
    <link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css">
      <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/22.2.6/css/dx.light.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
       .card {
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .btn-submit {
            background: orange;
            color: white;
            font-size: 16px;
            padding: 12px;
            border-radius: 5px;
            border: none;
        }
        .btn-submit:hover {
            background: darkorange;
        }
        .summary-item img {
            width: 50px;
            height: 50px;
            border-radius: 5px;
            object-fit: cover;
        }
        
        #loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 9999;
            pointer-events: auto;
        }

        #loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            color: #ffffff;
        }

        .spinner {
            border: 4px solid rgba(255, 255, 255, 0.3);
            border-top: 4px solid #ff5733;
            border-right: 4px solid #33ff57;
            border-bottom: 4px solid #3357ff;
            border-left: 4px solid #ff33a1;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 10px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
  </head>
  <body>
    <div id="loading-overlay">
      <div id="loading">
          <div class="spinner"></div>
          <div>Loading...</div>
      </div>
  </div>
    <!-- Header -->
    <header class="header">
      <div class="container">
        <nav class="navbar navbar-expand-lg" style="padding: 10px;">
          <div class="container-fluid">
            <a class="navbar-brand" href="/" style="padding: 0px;">
              <img src="/img/logo.png"
                style="max-width: 60px;height: auto;border-radius: 50% 50%;" />
              <small>Chegi BreakFast</small>
            </a>
            <button class="navbar-toggler" type="button"
              data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false"
              aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                  <a class="nav-link active" href="/">Trang Chủ</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/">Thực Đơn</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/">Về Chúng Tôi</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#contact">Liên Hệ</a>
                </li>
              </ul>

              <!-- <button class="btn btn-primary">Đặt Hàng Ngay</button> -->
              <div class="shop-cart">
                <a class="nav-link" href="/my-shop-cart">
                  <i class="fa-solid fa-cart-shopping"
                    style="font-size: xx-large;"></i>
                  <span
                    class="position-absolute translate-middle badge rounded-pill bg-danger"
                    id="count_cart">0</span>
                </a>
              </div>
            </div>

          </div>
        </nav>
      </div>
    </header>

    <!-- Features Section -->
    <section class="features" id="features">
        <div class="container">
            <div class="row">
                <!-- Thông tin đặt hàng -->
                <div class="col-md-8">
                    <div class="card p-4">
                        <h4 class="mb-3">
                            <i class="fas fa-shopping-bag text-warning"></i> Thông tin đặt hàng
                        </h4>
                        <div class="form-order">
                              <div class="mb-3">
                                <label class="form-label">Công ty</label>
                                <select class="form-select" id="txt_company">
                                    <option value="Sunhouse">Sunhouse</option>
                                    <option value="Kobler">Kobler</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Họ và tên *</label>
                                <input type="text" class="form-control" id="txt_name" placeholder="Nhập họ và tên">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Số điện thoại *</label>
                                <input type="text" class="form-control" id="txt_phone" placeholder="Nhập số điện thoại">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Địa chỉ giao hàng *</label>
                                <textarea class="form-control" rows="3" id="txt_address" placeholder="Nhập địa chỉ"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Ghi chú (tùy chọn)</label>
                                <textarea class="form-control" rows="2" id="txt_note" placeholder="Nhập ghi chú"></textarea>
                            </div>
                            <button class="btn btn-success w-100" id="btn-order">Đặt hàng</button>
                        </div>
                    </div>
                </div>
        
                <!-- Tóm tắt đơn hàng -->
                <div class="col-md-4">
                    <div class="card p-4" id="info-pay">
                        <h5 class="mb-3 text-center">Tóm tắt đơn hàng</h5>
                        <%lst_cart.forEach(item => { %>
                          <div class="d-flex align-items-center border-bottom pb-2 mb-2">
                            <img src='<%= item.imgsrc%>' width="50px" height="50px" alt="Trứng gà">
                            <div class="ms-3">
                              <%= item.itemname%> <br>
                                <small class="text-muted"><%=item.price%> x <%=item.quantity%> đ</small>
                            </div>
                            <div class="ms-auto fw-bold"><%= item.price* item.quantity %></div>
                        </div>
                        <% })%>
                        <div class="d-flex justify-content-between mt-3">
                            <span>Tạm tính:</span>
                            <span class="fw-bold"><%=total_price%>đ</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Phí vận chuyển:</span>
                            <span class="fw-bold text-success">Miễn phí</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fs-5 fw-bold">
                            <span>Tổng cộng:</span>
                            <span><%=total_price%>đ</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

