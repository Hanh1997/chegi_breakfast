    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/22.2.6/js/dx.all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.js"></script>
    <script src="/js/main.js"></script>
    <!-- Custom JS -->
    <script>
      var lst_cart = [];
      $(document).ready(() => {
          f_order.func_get_list_data_card();
          $("#btn-order").on("click",() => {
            f_order.func_save_order();
          });
      });
      let f_order = {
            func_save_order : () =>
                {
                  
                  var obj = {};
                    obj.company = $("#txt_company").val();
                    if(obj.company == null || obj.company == "")
                    {
                        DevExpress.ui.notify("Vui lòng chọn công ty", "warning", 3000);
                        return false;
                    }
                    obj.name = $("#txt_name").val()
                    if(obj.name == null || obj.name == "")
                    {
                        DevExpress.ui.notify("Vui lòng nhập họ tên", "warning", 3000);
                        return false;
                    }
                    obj.phone = $("#txt_phone").val()
                    obj.address =$("#txt_address").val(); 
                    obj.note =$("#txt_note").val();

                  $.each(lst_cart,(index,item) => {
                      item.company = obj.company;
                      item.name = obj.name;
                      item.phone = obj.phone;
                      item.address = obj.address;
                      item.note = obj.note;
                  });
                    $("#loading-overlay").fadeIn();
                            $.ajax({
                                url:"/api/send-order",
                                method: "POST",
                                contentType: "application/json",
                                data: JSON.stringify(lst_cart),
                                success: function (res) {
                                    if(res.success)
                                    {
                                      f_order.notify('Góp gạo cho Chegi thành công. Xin cảm ơn!','fa fa-smile-o','green')
                                    }else{ f_order.notify(`Ui có lỗi rồi ${res.message}`,'fa fa-frown-o','red');}
                                        $("#loading-overlay").fadeOut();
                                  },
                                error: function (error) {
                                    $("#loading-overlay").fadeOut();
                                    f_order.notify(`Ui có lỗi rồi ${error}`,'fa fa-frown-o','red');
                                    return false;
                                }
                            });
                },
            func_get_list_data_card : () => 
            {
              $.ajax({
                  url: "/get-cart", // API lấy danh sách món ăn
                  method: "GET",
                  dataType: "json",
                  success: function (res) {
                    lst_cart = res.cart;
                      var total_item = func.reduceSum(res.cart,"quantity");
                      $("#count_cart").html(total_item);
                  },
                  error: function (xhr, status, error) {
                      console.error("Lỗi khi lấy dữ liệu:", error);
                      return null;
                  }
              });
            },
            notify : (txt_content,icon,type) =>
            {
                $.confirm({
                            title: 'Thông báo',
                            icon: icon,
                            theme: 'modern',
                            closeIcon: true,
                            animation: 'scale',
                            type: type,
                            content: txt_content,
                            buttons: {
                                    close: {
                                        text: 'Đóng',
                                        btnClass: 'btn-blue',
                                        action: function(){
                                          window.location.href = "/";
                                        }
                                    }
                                }
                        });
            }
        }
    </script>
  </body>
</html>